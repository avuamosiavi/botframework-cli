{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "HomeStreet": { "type": "string" },
        "HomeCity": { "type": "string" },
        "HomeState": { 
            "type": "string",
            "$mappings": [ "STATE" ]
        },
        "HomeZip": { 
            "type": "string",
            "pattern": "^[0-9]{5}(?:-[0-9]{4})?$"
        },
        "HomeLatitude": { "type": "number" },
        "HomeLongitude": { "type": "number" },
        "HomePhone": { 
            "type": "string", 
            "pattern": "^(\\([0-9]{3}\\)|[0-9]{3}-)[0-9]{3}-[0-9]{4}$",
            "$mappings": [ "phonenumber" ]
        },

        "WorkStreet": { "type": "string" },
        "WorkCity": { "type": "string" },
        "WorkState": { 
            "type": "string",
            "$mappings": [ "STATE" ]
        },
        "WorkZip": { 
            "type": "string",
            "pattern": "^[0-9]{5}(?:-[0-9]{4})?$"
        },
        "WorkLatitude": { "type": "number" },
        "WorkLongitude": { "type": "number" },
        "WorkPhone": { 
            "type": "string", 
            "pattern": "^(\\([0-9]{3}\\)|[0-9]{3}-)[0-9]{3}-[0-9]{4}$",
            "$mappings": [ "phonenumber" ]
        },
        "Confirmation": {
            "type": "string",
            "enum": [
                "yes",
                "no"
            ],
            "$templates":[]
        },
        "CancelConfirmation": {
            "type": "string",
            "$mappings": ["Confirmation"],
            "$templates":[]
        },
        "CompleteConfirmation": {
            "type": "string",
            "$mappings": ["Confirmation"],
            "$templates":[]
        },
        "PropertyToChange": {
            "type": "string",
            "enum": [
                "Meat",
                "Bread",
                "Cheese",
                "Toppings"
            ],
            "$templates":[]
        }     
    },
    "required":["HomeStreet", "HomeCity", "HomeState", "HomePhone"]
}